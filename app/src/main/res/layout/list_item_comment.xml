<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_height="match_parent"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/inset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/inset_view_content_description"
        />

    <TextView
        android:id="@+id/kids"
        android:layout_below="@id/text"
        tools:text="kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:gravity="end"
        android:layout_toEndOf="@id/inset"
        android:layout_toRightOf="@id/inset"/>

    <TextView
        android:id="@+id/by"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author Name"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/time"
        android:layout_toStartOf="@id/time"
        android:layout_toEndOf="@id/inset"
        android:layout_toRightOf="@id/inset"/>

    <se.ntlv.newsbringer.DateView
        android:id="@+id/time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="some time"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_below="@id/by"
        android:id="@+id/text"
        tools:text="comment"
        android:autoLink="all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/inset"
        android:layout_toRightOf="@id/inset"/>


</RelativeLayout>
